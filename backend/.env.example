# ===========================================
# MARDEYS DASHBOARD - ENVIRONMENT CONFIGURATION
# ===========================================

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server
PORT=5000
NODE_ENV=production

# ===========================================
# SERVICE MONITORING CREDENTIALS
# ===========================================

# WordPress
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your-username
WORDPRESS_APP_PASSWORD=your-app-password

# WooCommerce (Consumer Key/Secret from WooCommerce > Settings > REST API)
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

# DigitalOcean
DIGITALOCEAN_API_KEY=your-digitalocean-api-token
DIGITALOCEAN_DROPLET_ID=your-droplet-id

# Cloudflare
CLOUDFLARE_API_KEY=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_ACCOUNT_ID=your-account-id

# ===========================================
# ALERT THRESHOLDS (Lower = More Sensitive)
# ===========================================

# Infrastructure thresholds
ALERT_CPU_THRESHOLD=70              # Alert when CPU > 70% (default)
ALERT_MEMORY_THRESHOLD=75           # Alert when Memory > 75%
ALERT_DISK_THRESHOLD=80             # Alert when Disk > 80%

# Performance thresholds
ALERT_RESPONSE_TIME_THRESHOLD=2000  # Alert when response > 2000ms
ALERT_ERROR_RATE_THRESHOLD=3        # Alert when error rate > 3%
ALERT_DB_RESPONSE_TIME=100          # Alert when DB response > 100ms
ALERT_API_RESPONSE_TIME=1500        # Alert when API response > 1500ms

# SSL
ALERT_SSL_EXPIRY_DAYS=14            # Alert when SSL expires in < 14 days

# Smart alerting
ALERT_CONSECUTIVE_FAILURES=3        # Only alert after 3 consecutive failures

# ===========================================
# EMAIL NOTIFICATIONS
# ===========================================

# SMTP Settings (e.g., Gmail, SendGrid, AWS SES)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password    # For Gmail, use App Password

# Notification recipients
EMAIL_FROM="Mardeys Dashboard <alerts@yourdomain.com>"
ALERT_EMAIL_TO=admin@yourdomain.com,team@yourdomain.com

# Which severity levels trigger email (comma-separated)
EMAIL_NOTIFY_SEVERITY=warning,error,critical

# ===========================================
# SLACK NOTIFICATIONS
# ===========================================

# Create a Slack Webhook: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXX

# Which severity levels trigger Slack (comma-separated)
SLACK_NOTIFY_SEVERITY=warning,error,critical

# ===========================================
# DISCORD NOTIFICATIONS
# ===========================================

# Create a Discord Webhook in Channel Settings > Integrations
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/0000000000000/XXXXXXXXXXXXXX

# Which severity levels trigger Discord (comma-separated)
DISCORD_NOTIFY_SEVERITY=error,critical

# ===========================================
# CUSTOM WEBHOOK NOTIFICATIONS
# ===========================================

# Send alerts to any custom endpoint (e.g., PagerDuty, Opsgenie, custom service)
CUSTOM_WEBHOOK_URL=https://your-custom-endpoint.com/webhook/alerts

# Optional: Authorization header for webhook
WEBHOOK_AUTH_HEADER=Bearer your-webhook-token

# Which severity levels trigger webhook (comma-separated)
WEBHOOK_NOTIFY_SEVERITY=critical

# ===========================================
# NOTIFICATION RATE LIMITING
# ===========================================

# Prevent duplicate notifications within this time window (minutes)
NOTIFICATION_RATE_LIMIT_MINUTES=15

# ===========================================
# DATA RETENTION
# ===========================================

# How many days to keep old metrics (default: 30)
CLEANUP_OLD_DATA_DAYS=30

# ===========================================
# OPTIONAL: CUSTOM API ENDPOINTS TO MONITOR
# ===========================================

# JSON array of additional endpoints to monitor
# CUSTOM_ENDPOINTS=[{"name":"My API","url":"https://api.example.com/health","expectedStatus":200,"category":"custom"}]

# ===========================================
# FRONTEND URL (for CORS)
# ===========================================

FRONTEND_URL=https://your-dashboard.vercel.app
MAIN_SITE_URL=https://mardeys.com
API_URL=https://mardeys-dashboard-api.onrender.com

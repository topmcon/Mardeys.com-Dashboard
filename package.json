{
  "name": "mardeys-dashboard",
  "version": "1.0.0",
  "description": "Comprehensive e-commerce monitoring dashboard for headless WordPress/WooCommerce site",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon backend/server.js",
    "client:dev": "cd frontend && npm run dev",
    "server": "node backend/server.js",
    "start": "node backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "build:frontend": "cd frontend && npm install && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "render-build": "npm install",
    "vercel-build": "cd frontend && npm install && npm run build"
  },
  "keywords": ["monitoring", "dashboard", "wordpress", "woocommerce", "ecommerce"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "mongoose": "^8.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "ws": "^8.14.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
